    <script src="https://apis.google.com/js/api.js"></script>
    <script src="https://accounts.google.com/gsi/client"></script>
    <script>
        // Application State
        let currentWeekStart = new Date();
        currentWeekStart.setHours(0, 0, 0, 0);
        const dayOfWeek = currentWeekStart.getDay();
        const diff = currentWeekStart.getDate() - dayOfWeek + (dayOfWeek === 0 ? -6 : 1);
        currentWeekStart.setDate(diff);

        let libraryEvents = [];
        let scheduledEvents = [];
        let draggedItem = null;
        let ghostElement = null;
        let collapsedDays = new Set();
        let accessToken = null;

        // Google Calendar API Configuration
        const CLIENT_ID = '805806936738-svig4rs4b96t849n81b7e5hi8p44qo0v.apps.googleusercontent.com';
        const API_KEY = 'AIzaSyDzisAik43Rr1xTJXg2bHXNF_XRTjjZsh8';
        const DISCOVERY_DOCS = ['https://www.googleapis.com/discovery/v1/apis/calendar/v3/rest'];
        const SCOPES = 'https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.events';

        // Test with personal calendar first, then TSL calendars
        const CALENDAR_IDS = {
            'primary': 'primary', // Your personal Google Calendar - this should work
            'events': '1ed95b09dcc5ea1a1e13267b6654eca3c892fc79c23e2e9edc1e271411967255@group.calendar.google.com',
            'non-public': '6b48156e2887ac486283a0d4a2f94b1d2ad4b1ac4dd7e19f2fc7e01dafe67700@group.calendar.google.com',
            'tbd': '7b77eba3cf2e9f4e0407d62c3acd2540170b31554d1698b71ea7eb3a11d58306@group.calendar.google.com',
            'theater-1': '007f10222d517076d028161a4cda7108e75444c18ef7ac0d79aee420313d1a7b@group.calendar.google.com',
            'theater-2': 'ed801a88ce91b43543ef4e87c34d1405a6e053c5254e55e2871f0d305ecc32c4@group.calendar.google.com'
        };

        // Calendar configuration
        const calendarConfig = {
            'primary': { color: '#4285f4', name: 'My Personal Calendar' },
            'events': { color: '#ec407a', name: 'TSL Events' },
            'non-public': { color: '#ff9800', name: 'TSL Events (NON-PUBLIC)' },
            'tbd': { color: '#42a5f5', name: 'TSL TBD' },
            'theater-1': { color: '#757575', name: 'TSL Theater 1' },
            'theater-2': { color: '#66bb6a', name: 'TSL Theater 2' }
        };

        function updateDebugInfo(message) {
            document.getElementById('debugInfo').textContent = `Debug: ${message}`;
        }

        // Initialize Google API with new Identity Services
        function initGoogleAPI() {
            updateDebugInfo('Loading Google API...');
            
            // Initialize the Google API client
            gapi.load('client', async () => {
                try {
                    await gapi.client.init({
                        apiKey: API_KEY,
                        discoveryDocs: DISCOVERY_DOCS
                    });
                    console.log('Google API client initialized');
                    updateDebugInfo('Google API loaded successfully');
                } catch (error) {
                    console.error('Error initializing Google API client:', error);
                    updateDebugInfo(`API Error: ${error.message || error}`);
                    document.getElementById('syncStatus').innerHTML = '<span>⚠</span><span>API Error</span>';
                    showToast('Failed to initialize Google Calendar API');
                }
            });

            // Initialize Google Sign-In
            google.accounts.id.initialize({
                client_id: CLIENT_ID,
                callback: handleCredentialResponse,
                auto_select: false,
                cancel_on_tap_outside: false
            });
        }

        // Handle the credential response from Google Sign-In
        function handleCredentialResponse(response) {
            console.log('Credential response received');
            updateDebugInfo('Received Google credential response');
        }

        // Initialize OAuth2 flow for getting access token
        function initOAuth() {
            updateDebugInfo('Setting up OAuth...');
            
            const tokenClient = google.accounts.oauth2.initTokenClient({
                client_id: CLIENT_ID,
                scope: SCOPES,
                callback: (response) => {
                    if (response.access_token) {
                        accessToken = response.access_token;
                        updateDebugInfo(`Access token received: ${response.access_token.substring(0, 20)}...`);
                        updateSigninStatus(true);
                        // Start with just personal calendar for testing
                        importSingleCalendar('primary');
                    } else {
                        updateDebugInfo(`OAuth error: ${response.error || 'Unknown error'}`);
                    }
                },
            });
            
            window.tokenClient = tokenClient;
            updateDebugInfo('OAuth ready');
        }

        function updateSigninStatus(isSignedIn) {
            const authButton = document.getElementById('authButton');
            const syncStatus = document.getElementById('syncStatus');
            
            if (isSignedIn) {
                authButton.textContent = 'Sign Out';
                authButton.classList.add('sign-out');
                syncStatus.classList.add('connected');
                syncStatus.innerHTML = '<span>✓</span><span>Connected to Google Calendar</span>';
            } else {
                authButton.textContent = 'Connect Google Calendar';
                authButton.classList.remove('sign-out');
                syncStatus.classList.remove('connected');
                syncStatus.innerHTML = '<span>○</span><span>Not connected</span>';
                accessToken = null;
                libraryEvents = [];
                renderLibrary();
                updateDebugInfo('Not connected to Google Calendar');
            }
        }

        function handleAuthClick() {
            if (accessToken) {
                // Sign out
                google.accounts.oauth2.revoke(accessToken, () => {
                    console.log('Access token revoked');
                });
                updateSigninStatus(false);
                showToast('Disconnected from Google Calendar');
            } else {
                // Sign in
                if (window.tokenClient) {
                    updateDebugInfo('Requesting access token...');
                    window.tokenClient.requestAccessToken();
                } else {
                    updateDebugInfo('TokenClient not ready');
                    showToast('Authentication not ready. Please refresh the page.');
                }
            }
        }

        // Test with just one calendar first
        async function importSingleCalendar(calendarKey) {
            const calendarId = CALENDAR_IDS[calendarKey];
            updateDebugInfo(`Testing calendar: ${calendarKey} (${calendarId})`);
            
            const syncStatus = document.getElementById('syncStatus');
            syncStatus.classList.add('syncing');
            syncStatus.innerHTML = '<span>↻</span><span>Testing calendar access...</span>';
            
            try {
                const startOfWeek = new Date(currentWeekStart);
                const endOfWeek = new Date(currentWeekStart);
                endOfWeek.setDate(endOfWeek.getDate() + 7);

                const url = `https://www.googleapis.com/calendar/v3/calendars/${encodeURIComponent(calendarId)}/events?` +
                    `timeMin=${startOfWeek.toISOString()}&` +
                    `timeMax=${endOfWeek.toISOString()}&` +
                    `showDeleted=false&` +
                    `singleEvents=true&` +
                    `orderBy=startTime&` +
                    `key=${API_KEY}`;

                updateDebugInfo(`Making request to: ${url.substring(0, 100)}...`);

                const response = await fetch(url, {
                    headers: {
                        'Authorization': `Bearer ${accessToken}`
                    }
                });

                updateDebugInfo(`Response status: ${response.status} ${response.statusText}`);

                if (response.ok) {
                    const data = await response.json();
                    const events = data.items || [];
                    
                    updateDebugInfo(`Success! Found ${events.length} events in ${calendarKey}`);
                    
                    libraryEvents = [];
                    events.forEach(event => {
                        // Calculate duration in minutes
                        let duration = 120; // Default 2 hours
                        if (event.start && event.end) {
                            const start = new Date(event.start.dateTime || event.start.date);
                            const end = new Date(event.end.dateTime || event.end.date);
                            duration = Math.round((end - start) / 60000); // Convert to minutes
                        }

                        libraryEvents.push({
                            id: event.id || Date.now() + Math.random(),
                            title: event.summary || 'Untitled Event',
                            duration: duration,
                            calendar: calendarKey,
                            description: event.description || '',
                            location: event.location || '',
                            googleEventId: event.id,
                            startTime: event.start,
                            endTime: event.end
                        });
                    });

                    renderLibrary();
                    syncStatus.classList.remove('syncing');
                    syncStatus.classList.add('connected');
                    syncStatus.innerHTML = '<span>✓</span><span>Connected to Google Calendar</span>';
                    showToast(`Success! Found ${events.length} events in your ${calendarConfig[calendarKey].name}`);
                    
                } else {
                    const errorText = await response.text();
                    updateDebugInfo(`Error ${response.status}: ${errorText.substring(0, 200)}`);
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
            } catch (error) {
                console.error('Error fetching calendar events:', error);
                updateDebugInfo(`Error: ${error.message}`);
                syncStatus.classList.remove('syncing');
                syncStatus.innerHTML = '<span>⚠</span><span>Test failed</span>';
                showToast(`Test failed: ${error.message}`);
            }
        }

        // Import from Google Calendar (Test all calendars)
        async function importFromGoogle() {
            if (!accessToken) {
                showToast('Please connect to Google Calendar first');
                return;
            }

            const syncStatus = document.getElementById('syncStatus');
            syncStatus.classList.add('syncing');
            syncStatus.innerHTML = '<span>↻</span><span>Testing all calendars...</span>';
            
            // Clear existing data
            libraryEvents = [];
            scheduledEvents = [];
            
            // Clear existing scheduled events from grid
            document.querySelectorAll('.event-block').forEach(block => block.remove());
            
            let totalEvents = 0;
            let successfulCalendars = [];
            let failedCalendars = [];

            // Test all calendars
            for (const [calendarKey, calendarId] of Object.entries(CALENDAR_IDS)) {
                updateDebugInfo(`Testing ${calendarKey}: ${calendarId}`);
                
                try {
                    const events = await importSingleCalendarData(calendarKey, calendarId);
                    if (events.length > 0) {
                        successfulCalendars.push(`${calendarKey} (${events.length} events)`);
                        totalEvents += events.length;
                    } else {
                        successfulCalendars.push(`${calendarKey} (0 events)`);
                    }
                } catch (error) {
                    failedCalendars.push(`${calendarKey}: ${error.message}`);
                    updateDebugInfo(`Failed ${calendarKey}: ${error.message}`);
                }
            }

            // Update UI
            renderLibrary();
            updateWeekStats();
            syncStatus.classList.remove('syncing');
            
            if (totalEvents > 0) {
                syncStatus.classList.add('connected');
                syncStatus.innerHTML = '<span>✓</span><span>Connected to Google Calendar</span>';
                updateDebugInfo(`Success! Total: ${totalEvents} events. Successful: ${successfulCalendars.join(', ')}. Failed: ${failedCalendars.join(', ')}`);
                showToast(`Found ${totalEvents} events across ${successfulCalendars.length} calendars. ${scheduledEvents.length} automatically scheduled on grid.`);
            } else {
                syncStatus.innerHTML = '<span>⚠</span><span>No events found</span>';
                updateDebugInfo(`No events found. Failed calendars: ${failedCalendars.join(', ')}`);
                showToast('No events found in any calendars');
            }
        }

        // Helper function to import from a single calendar and return events
        async function importSingleCalendarData(calendarKey, calendarId) {
            const startOfWeek = new Date(currentWeekStart);
            const endOfWeek = new Date(currentWeekStart);
            endOfWeek.setDate(endOfWeek.getDate() + 7);

            const url = `https://www.googleapis.com/calendar/v3/calendars/${encodeURIComponent(calendarId)}/events?` +
                `timeMin=${startOfWeek.toISOString()}&` +
                `timeMax=${endOfWeek.toISOString()}&` +
                `showDeleted=false&` +
                `singleEvents=true&` +
                `orderBy=startTime&` +
                `key=${API_KEY}`;

            const response = await fetch(url, {
                headers: {
                    'Authorization': `Bearer ${accessToken}`
                }
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            const events = data.items || [];
            
            // Add events to library
            events.forEach(event => {
                // Calculate duration in minutes
                let duration = 120; // Default 2 hours
                if (event.start && event.end) {
                    const start = new Date(event.start.dateTime || event.start.date);
                    const end = new Date(event.end.dateTime || event.end.date);
                    duration = Math.round((end - start) / 60000); // Convert to minutes
                }

                // Skip all-day events for the schedule grid
                if (!event.start.dateTime) {
                    duration = 1440; // Mark as 24 hours for all-day events
                }

                libraryEvents.push({
                    id: event.id || Date.now() + Math.random(),
                    title: event.summary || 'Untitled Event',
                    duration: duration,
                    calendar: calendarKey,
                    description: event.description || '',
                    location: event.location || '',
                    googleEventId: event.id,
                    startTime: event.start,
                    endTime: event.end,
                    isAllDay: !event.start.dateTime
                });
            });

            return events;
        }

        // Initialize the app
        function init() {
            generateTimeColumn();
            generateDaysColumns();
            updateWeekDisplay();
            updateWeekStats();
            
            // Set up auth button
            const authButton = document.getElementById('authButton');
            authButton.onclick = handleAuthClick;
            
            // Initialize Google APIs
            initGoogleAPI();
            
            // Initialize OAuth after a short delay to ensure Google APIs are loaded
            setTimeout(() => {
                initOAuth();
            }, 1000);
            
            // Render empty library initially
            renderLibrary();
        }

        // Generate time column (24 hours with 15-min increments)
        function generateTimeColumn() {
            const timeColumn = document.getElementById('timeColumn');
            for (let hour = 0; hour < 24; hour++) {
                for (let min = 0; min < 60; min += 15) {
                    if (min === 0) {
                        const timeSlot = document.createElement('div');
                        timeSlot.className = 'time-slot';
                        timeSlot.textContent = formatTime(hour, min);
                        timeColumn.appendChild(timeSlot);
                    }
                }
            }
        }

        // Generate day columns with theater lanes
        function generateDaysColumns() {
            const daysContainer = document.getElementById('daysContainer');
            const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
            
            days.forEach((day, index) => {
                const dayColumn = document.createElement('div');
                dayColumn.className = 'day-column';
                dayColumn.id = `day-${index}`;
                
                const dayHeader = document.createElement('div');
                dayHeader.className = 'day-header';
                const date = new Date(currentWeekStart);
                date.setDate(date.getDate() + index);
                dayHeader.textContent = `${day.substr(0, 3)} ${date.getMonth() + 1}/${date.getDate()}`;
                dayColumn.appendChild(dayHeader);
                
                const theaterLanes = document.createElement('div');
                theaterLanes.className = 'theater-lanes';
                
                ['Theater 1', 'Theater 2'].forEach((theater, theaterIndex) => {
                    const lane = document.createElement('div');
                    lane.className = 'theater-lane';
                    lane.dataset.day = index;
                    lane.dataset.theater = theaterIndex;
                    
                    const laneHeader = document.createElement('div');
                    laneHeader.className = 'theater-lane-header';
                    laneHeader.textContent = theater;
                    lane.appendChild(laneHeader);
                    
                    // Add drop zone functionality
                    lane.addEventListener('dragover', handleDragOver);
                    lane.addEventListener('drop', handleDrop);
                    lane.addEventListener('dragleave', handleDragLeave);
                    
                    theaterLanes.appendChild(lane);
                });
                
                dayColumn.appendChild(theaterLanes);
                daysContainer.appendChild(dayColumn);
            });
        }

        // Format time display
        function formatTime(hour, min) {
            const h = hour === 0 ? 12 : hour > 12 ? hour - 12 : hour;
            const m = min.toString().padStart(2, '0');
            const period = hour < 12 ? 'AM' : 'PM';
            return min === 0 ? `${h}:${m} ${period}` : '';
        }

        // Render library items
        function renderLibrary() {
            const container = document.getElementById('libraryItems');
            const filter = document.getElementById('calendarFilter').value;
            container.innerHTML = '';
            
            // Check if connected to Google Calendar
            if (!accessToken) {
                container.innerHTML = `
                    <div style="padding: 20px; text-align: center; color: #86868b;">
                        <p style="margin-bottom: 10px;">📅</p>
                        <p style="font-size: 14px;">Connect to Google Calendar to test calendar access</p>
                        <p style="font-size: 12px; margin-top: 10px;">We'll start by testing your personal calendar</p>
                    </div>
                `;
                document.getElementById('libraryCount').textContent = '(0)';
                return;
            }
            
            const filteredEvents = filter === 'all' 
                ? libraryEvents 
                : libraryEvents.filter(e => e.calendar === filter);
            
            if (filteredEvents.length === 0) {
                container.innerHTML = `
                    <div style="padding: 20px; text-align: center; color: #86868b; font-size: 14px;">
                        No events found. Click "Import from Google Calendar" to test.
                    </div>
                `;
            } else {
                filteredEvents.forEach(event => {
                    const item = document.createElement('div');
                    item.className = `library-item calendar-${event.calendar}`;
                    item.draggable = true;
                    item.dataset.eventId = event.id;
                    
                    item.innerHTML = `
                        <div class="library-item-title">${event.title}</div>
                        <div class="library-item-duration">${Math.floor(event.duration / 60)}h ${event.duration % 60}m</div>
                    `;
                    
                    item.addEventListener('dragstart', handleDragStart);
                    item.addEventListener('dragend', handleDragEnd);
                    
                    container.appendChild(item);
                });
            }
            
            document.getElementById('libraryCount').textContent = `(${filteredEvents.length})`;
        }

        // Simplified drag and drop for testing (rest of the functions remain the same)
        function handleDragStart(e) {
            draggedItem = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'copy';
            
            const eventId = this.dataset.eventId;
            const event = libraryEvents.find(e => e.id == eventId) || 
                         scheduledEvents.find(e => e.id == eventId);
            
            if (event) {
                e.dataTransfer.setData('event', JSON.stringify(event));
            }
        }

        function handleDragEnd(e) {
            if (draggedItem) {
                draggedItem.classList.remove('dragging');
            }
            draggedItem = null;
            removeGhost();
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.dataTransfer.dropEffect = 'copy';
            this.classList.add('drop-active');
            
            const rect = this.getBoundingClientRect();
            const y = e.clientY - rect.top;
            const snapY = Math.floor(y / 10) * 10;
            
            showGhost(this, snapY);
        }

        function handleDragLeave(e) {
            this.classList.remove('drop-active');
        }

        function handleDrop(e) {
            e.preventDefault();
            this.classList.remove('drop-active');
            
            const eventData = e.dataTransfer.getData('event');
            if (!eventData) return;
            
            const event = JSON.parse(eventData);
            const rect = this.getBoundingClientRect();
            const y = e.clientY - rect.top;
            const snapY = Math.floor(y / 10) * 10;
            
            const hour = Math.floor(snapY / 40);
            const minute = ((snapY % 40) / 10) * 15;
            
            const scheduledEvent = {
                ...event,
                day: parseInt(this.dataset.day),
                theater: parseInt(this.dataset.theater),
                startHour: hour,
                startMinute: minute,
                id: Date.now()
            };
            
            // Update calendar for theater events
            if (this.dataset.theater === '0') {
                scheduledEvent.calendar = 'theater-1';
            } else {
                scheduledEvent.calendar = 'theater-2';
            }
            
            scheduledEvents.push(scheduledEvent);
            renderScheduledEvent(scheduledEvent);
            updateWeekStats();
            removeGhost();
            
            showToast('Event scheduled successfully!');
        }

        function showGhost(lane, y) {
            removeGhost();
            
            if (!draggedItem) return;
            
            const eventId = draggedItem.dataset.eventId;
            const event = libraryEvents.find(e => e.id == eventId);
            if (!event) return;
            
            ghostElement = document.createElement('div');
            ghostElement.className = 'ghost-event';
            ghostElement.style.top = `${y}px`;
            
            const height = (event.duration / 60) * 40;
            ghostElement.style.height = `${height}px`;
            
            lane.appendChild(ghostElement);
        }

        function removeGhost() {
            if (ghostElement && ghostElement.parentNode) {
                ghostElement.parentNode.removeChild(ghostElement);
            }
            ghostElement = null;
        }

        function renderScheduledEvent(event) {
            const dayColumn = document.getElementById(`day-${event.day}`);
            const lane = dayColumn.querySelectorAll('.theater-lane')[event.theater];
            
            const eventBlock = document.createElement('div');
            eventBlock.className = `event-block calendar-${event.calendar}`;
            eventBlock.draggable = true;
            eventBlock.dataset.eventId = event.id;
            
            const top = event.startHour * 40 + (event.startMinute / 15) * 10;
            const height = (event.duration / 60) * 40;
            
            eventBlock.style.top = `${top}px`;
            eventBlock.style.height = `${height}px`;
            
            const endHour = event.startHour + Math.floor((event.startMinute + event.duration) / 60);
            const endMinute = (event.startMinute + event.duration) % 60;
            
            eventBlock.innerHTML = `
                <div class="event-title">${event.title}</div>
                <div class="event-time">${formatTimeRange(event.startHour, event.startMinute, endHour, endMinute)}</div>
            `;
            
            eventBlock.addEventListener('dragstart', handleDragStart);
            eventBlock.addEventListener('dragend', handleDragEnd);
            
            lane.appendChild(eventBlock);
        }

        function formatTimeRange(startH, startM, endH, endM) {
            const formatSingleTime = (h, m) => {
                const hour = h === 0 ? 12 : h > 12 ? h - 12 : h;
                const min = m.toString().padStart(2, '0');
                return `${hour}:${min}`;
            };
            
            return `${formatSingleTime(startH, startM)} - ${formatSingleTime(endH, endM)}`;
        }

        // Week navigation
        function changeWeek(direction) {
            currentWeekStart.setDate(currentWeekStart.getDate() + (direction * 7));
            document.getElementById('daysContainer').innerHTML = '';
            generateDaysColumns();
            updateWeekDisplay();
            
            // Re-render scheduled events for the new week
            scheduledEvents = [];
            updateWeekStats();
        }

        function updateWeekDisplay() {
            const endDate = new Date(currentWeekStart);
            endDate.setDate(endDate.getDate() + 6);
            
            const options = { month: 'short', day: 'numeric', year: 'numeric' };
            const startStr = currentWeekStart.toLocaleDateString('en-US', options);
            const endStr = endDate.toLocaleDateString('en-US', options);
            
            document.getElementById('weekDisplay').textContent = `Week of ${startStr} - ${endStr}`;
        }

        function updateWeekStats() {
            const total = scheduledEvents.length;
            document.getElementById('weekTotal').textContent = `${total} event${total !== 1 ? 's' : ''}`;
        }

        // Collapse Tuesday-Thursday
        function toggleCollapse() {
            const days = [1, 2, 3];
            days.forEach(day => {
                const dayColumn = document.getElementById(`day-${day}`);
                dayColumn.classList.toggle('collapsed');
            });
            
            const button = event.target;
            button.textContent = button.textContent.includes('Collapse') ? 'Expand Tue-Thu' : 'Collapse Tue-Thu';
        }

        // Filter library
        function filterLibrary() {
            renderLibrary();
        }

        // Toast notification
        function showToast(message) {
            const existing = document.querySelector('.toast');
            if (existing) existing.remove();
            
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Initialize app on load
        init();
    </script>
</body>
</html>
